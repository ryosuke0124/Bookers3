<h2>User info</h2>
 <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg' , fallback: "no-image.jpg"  %>
<table class="table">
     <tbody>
         <tr>
    	     <th><%= user.name %></th>
         </tr>
      <tr>
    	     <th><%= user.introduction %></th>
      </tr>
     </tbody>
</table>
 <%= link_to "edit", edit_user_path(current_user.id) %>
<h1>New book</h1>
  <%= form_for book, url: books_path do |f| %>
     <h4>Title</h4>
         <%= f.text_field :title %>
     <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
  <% end %>