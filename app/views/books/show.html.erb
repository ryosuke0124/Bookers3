<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container">
 <div class="row">
  <table class="table table-striped">
   <thead>
    <tr>
  <div class="col-xs-3">
   <%= render 'books/list', book: @new_book, user: @book.user %>
 <th><h1>Book detail</h1></th>
     <th>

      	<%= link_to user_path(@book.user.id) do %>
      		<%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg' , fallback: "no-image.jpg" %>
	 	<% end %>
	 </th>
	<div>
	 <div class="col-xs-9">
	 <th><%= link_to @book.title, book_path(@book) %></th>
	</div>
	<div>
	 <th><%= @book.body %></th>
	</div>>
</table>

<% if @book.user.id == current_user.id %>
<%= link_to "Edit", edit_book_path(@book) %>
<%= link_to "Destroy", book_path(@book), method: :delete %>
<% end %>
</div>
</table>
</div>
</div>
</div>